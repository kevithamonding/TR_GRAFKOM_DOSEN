void tambahan() {
    //tambahan
    glColor3f(0.87, 0.71, 0.71);

    //DEPAN
    //tiangkiri
    //depankiri
    glPushMatrix();
    glTranslated(145.0, 0.0, 0);

    glBegin(GL_QUADS);
    glVertex3f(-82.0, -78.0, 3.0);
    glVertex3f(-90.0, -48.0, 6.0);
    glVertex3f(-77.0, -48.0, 6.0);
    glVertex3f(-77.0, -78.0, 3.0);
