    db2(54.0, 47.0, 53.0, 46.0, -10.0, 2.0, -12.8);

    db2(40.0, 47.0, 39.0, 46.0, -10.0, 2.0, -12.8);
    db2(40.0, 33.0, 39.0, 32.0, -10.0, 2.0, -12.8);

    db2(26.0, 33.0, 25.0, 32.0, -10.0, 2.0, -12.8);
